# LAMMPS input file (License CC BY 4.0)

variable number equal 50
variable seed equal 87669

units real
boundary p p p
atom_style full
bond_style harmonic
angle_style harmonic

pair_style lj/cut/coul/long 17
pair_modify mix arithmetic

kspace_style ewald 1.0e-5
kspace_modify gewald 0.1622 kmax/ewald 6 6 6

region box block -20 20 -20 20 -20 20
create_box 2 box &
    bond/types 1 &
    angle/types 1 &
    extra/bond/per/atom 4 &
    extra/angle/per/atom 4 &
    extra/special/per/atom 4

include parameters.inc

mass 1 15.9994
mass 2 12.011

molecule co2mol co2.mol
create_atoms 0 random ${number} 3245 NULL mol co2mol 4585 overlap 2.0 maxtry 50

group CO2 type 1 2

thermo_style custom step etotal evdwl ecoul elong ebond 

run 0
write_data topology.data nocoeff
