# LAMMPS input file
# Rigid frame and rigid TIP4P molecule with explicit 4-th point

units real
boundary p p p
atom_style full
bond_style harmonic
angle_style harmonic
pair_style lj/cut/coul/long 17
kspace_style ewald 1.0e-5
kspace_modify kmax/ewald 5 5 5 gewald 0.1622

region box block -50 50 -50 50 -50 50
create_box 3 box &
    bond/types 2 &
    angle/types 2 &
    extra/bond/per/atom 4 &
    extra/angle/per/atom 4 &
    extra/special/per/atom 4

include water.inc
include water.masses

molecule h2omol water.mol
create_atoms 0 random 1000 3245 NULL mol h2omol 4585 overlap 2.0 maxtry 50

group H2O type 1 2 3

thermo_style custom step etotal evdwl ecoul elong ebond 

run 0
write_data water.data
