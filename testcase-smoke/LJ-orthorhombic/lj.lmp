# LAMMPS input file

units real
boundary p p p
atom_style full
bond_style harmonic
angle_style harmonic
pair_style lj/cut/coul/long 17
kspace_style ewald 1.0e-5
kspace_modify kmax/ewald 8 6 6 gewald 0.1622

read_data lj.data
include lj.inc

# create_atoms 1 random 25 3245 NULL overlap 2.0 maxtry 50
# create_atoms 2 random 25 1245 NULL overlap 2.0 maxtry 50

set type 1 charge 1.0
set type 2 charge -0.5

group A type 1
group B type 2

thermo_style custom step etotal evdwl ecoul elong

run 0
write_dump all atom lj.lammpstrj
write_data lj.data nocoeff

